{
  "name": "template-gulp",
  "version": "1.0.0",
  "description": "Este sera mi template base, para trabajar del lado frontend",
  "main": "gulpfile.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "pug": "gulp pug",
    "sass": "gulp sass",
    "es6": "gulp es6",
    "serve": "browser-sync start --server --startPath \"dist\" --files \"dist/**/*.+(html|css|js)\"",
    "build:dev": "npm run pug && npm run sass && npm run es6",
    "watch:pug": "onchange \"./src/pug/**\" -- npm run pug",
    "watch:sass": "onchange \"./src/scss/**\" -- npm run sass",
    "watch:es6": "onchange \"./src/es6/**\" -- npm run es6",
    "watch:dev": "parallelshell \"npm run serve\" \"npm run watch:pug\" \"npm run watch:sass\" \"npm run watch:es6\"",
    "img": "gulp img",
    "svg": "gulp svg",
    "webp": "gulp webp",
    "resize": "mogrify -resize \"1024>\" ./dist/images/*.*",
    "fonts": "gulp fonts",
    "statics": "gulp statics",
    "build:media": "npm run img && npm run svg && npm run webp && npm run fonts && npm run statics",
    "css": "gulp css",
    "js": "gulp js",
    "html": "gulp html",
    "build:prod": "npm run css && npm run js && npm run html",
    "watch:css": "onchange \"./dist/css/**\" -- npm run css",
    "watch:js": "onchange \"./dist/js/**\" -- npm run js",
    "watch:html": "onchange \"./dist/*.html\" -- npm run html",
    "watch:prod": "parallelshell \"npm run serve\" \"npm run watch:css\" \"npm run watch:js\" \"npm run watch:html\"",
    "start": "npm run build:prod && npm run watch:prod",
    "postinstall": "npm start"
  },
  "author": "JMMoriones",
  "license": "MIT",
  "dependencies": {
    "babel-preset-es2015": "^6.14.0",
    "browser-sync": "^2.14.3",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-babel": "^6.1.2",
    "gulp-browserify": "^0.5.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^3.0.3",
    "gulp-pug": "^5.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-svgmin": "^1.2.2",
    "gulp-uglify": "^2.0.0",
    "gulp-uglify-es": "^3.0.0",
    "gulp-uncss": "^1.0.6",
    "gulp-useref": "^5.0.0",
    "gulp-webp": "^2.3.0",
    "imagemin-pngquant": "^5.0.0",
    "mogrify": "^0.3.2",
    "onchange": "^7.1.0",
    "sass": "^1.45.2",
    "transform-class-properties": "^1.0.0-beta"
  },
  "devDependencies": {
    "animate.css": "^4.1.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.6.0",
    "owl.carousel": "^2.3.4",
    "parallelshell": "^3.0.1",
    "responsimple": "^1.0.1",
    "wowjs": "^1.1.3"
  },
  "keywords": []
}
